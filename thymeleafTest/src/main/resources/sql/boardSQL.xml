<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.example.spring.board.BoardDAO"> 
<!-- mybatis-confg.xml 에 Alias 되어 있습니다. --> 
	<select id="listAll" resultType="com.example.spring.board.BoardDTO"> 
		SELECT
            ROWNUM AS RNUM,
			BNO,
			RE_PNO,
			RE_DEPTH,
			GROUP_ID,
			RE_SEQ,
			TITLE,
			CONTENT,
			WRITER,
			WRITER_KEY,
			REGDATE,
			VIEWCNT,
			B_ISSHOW,
			UPDATEDATE
		FROM
			BOARD
	</select>

	<select id = "selectCount" resultType = "int">
		SELECT COUNT(*) 
		FROM BOARD
	</select>
</mapper> 
